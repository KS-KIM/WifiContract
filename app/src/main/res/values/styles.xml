<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextStyle_tag">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="TextStyle_list">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#893c3f45</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>

    <style name="TextStyle17_medi">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="TextStyle17_reg">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>
</resources>
